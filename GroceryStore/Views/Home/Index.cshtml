@model IEnumerable<GroceryStore.Models.Grocery>

@{
    ViewData["Title"] = "Groceries";
}

<h2>Groceries</h2>

<table id="groceryTable" class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Grocery item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Home" asp-action="Stock" asp-route-id="@item.GroceryId">@item.Name</a>
                </td>
                <td>
                    @{ 
                        string price = string.Format("{0:C}", item.Price);
                    }
                    @Html.DisplayFor(modelItem => price)
                </td>
                <td>
                    @{ 
                        string weight = item.Weight != null ? $"{string.Format("{0:G29}", item.Weight)} {item.Conversion.Code}" : string.Empty;
                    }
                    @Html.DisplayFor(modelItem => weight)
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $("#groceryTable").DataTable();
    });
</script>
