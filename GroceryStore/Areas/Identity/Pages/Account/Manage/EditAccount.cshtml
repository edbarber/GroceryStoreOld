@page
@model EditAccountModel
@{
    ViewData["Title"] = $"Edit Details for {ViewData["User"]}";
    ViewData["ActivePage"] = ManageNavPages.Accounts;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                @if (Model.AllowUsernameAndRoleEdit)
                {
                    <input asp-for="Input.UserName" class="form-control" />
                }
                else
                {
                    <input asp-for="Input.UserName" class="form-control" disabled />
                    <input asp-for="Input.UserName" type="hidden" />
                }
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SelectedRoleId"></label>
                @if (Model.AllowUsernameAndRoleEdit)
                {
                    <select asp-for="Input.SelectedRoleId" asp-items="Model.Roles" class="form-control"></select>
                }
                else
                {
                    <select asp-for="Input.SelectedRoleId" asp-items="Model.Roles" class="form-control" disabled></select>
                    <input asp-for="Input.SelectedRoleId" type="hidden" />
                }
                <span asp-validation-for="Input.SelectedRoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="./EditAccountPassword" asp-route-id="@ViewData["Id"]" asp-route-returnURL="@Url.Page("./EditAccount", new { id = ViewData["Id"] })" class="btn btn-default">Update Password</a>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
</div>
