@page
@model EditRoleModel
@{
    ViewData["Title"] = $"Edit {ViewData["Role"]} Role";
    ViewData["ActivePage"] = ManageNavPages.Roles;
}

<h2>@ViewData["Title"]</h2>
<div class="row">
<partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <input asp-for="Input.Role" class="form-control" />
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SelectedClaimType"></label>
                <select asp-for="Input.SelectedClaimType" asp-items="Model.Claims" class="form-control"></select>
                <span asp-validation-for="Input.SelectedClaimType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
</div>
