@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            @if (Model.AllowDelete)
            {
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            }
            else
            {
                <strong class="text-danger">Deleteing this data is forbidden.</strong>
            }
        </p>
        <form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-default" type="submit">Download</button>
        </form>
        <p>
            @if (Model.AllowDelete)
            {
                <a asp-page="DeletePersonalData" class="btn btn-default">Delete</a>
            }
            else
            {
                <button class="btn btn-default" disabled>Delete</button>
            }
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}